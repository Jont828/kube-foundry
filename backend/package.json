{
  "name": "@kubefoundry/backend",
  "version": "1.0.0",
  "description": "KubeFoundry Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "tsc",
    "start": "bun src/index.ts",
    "embed": "bun scripts/embed-assets.ts",
    "precompile": "bun run embed",
    "compile": "bun build --compile --outfile ../dist/kubefoundry src/index.ts",
    "lint": "eslint src --ext .ts",
    "test": "bun test"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "@kubernetes/client-node": "^0.21.0",
    "cors": "^2.8.5",
    "hono": "^4.10.7",
    "pino": "^10.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.3.3"
  }
}
